var shiftId = String("<%= @shift.id %>");
var shiftDay = String("<%= @shift.day %>");

var today = new Date().setHours(0,0,0,0);
var shiftDateNum = calculateShiftDateNum(shiftDay);

function calculateShiftDateNum(shiftDay){
	var shiftDateSplit = shiftDay.split("-");
	var shiftDate = new Date(shiftDateSplit[0], shiftDateSplit[1] - 1, shiftDateSplit[2]);
	return shiftDate.setHours(0,0,0,0);
}


$(document).ready(function() {
	
	if (shiftDateNum == today){
 		$('.modal-alert-message').html("Sorry you cant change TODAY shift, try with tomorrow's!!")
 		$('#modal-alert').openModal();
 	}
 	else if(shiftDateNum < today){
 		$('.modal-alert-message').html("Sorry Mr McFly, Doc has not yet implemented the TIMETRAVELLING MODULE!!")
 		$('#modal-alert').openModal();
 	}
 	else{
 		$('.js-today-card-content').html("<%= escape_javascript(render partial: 'content_card') %>");
 	}
 	
});




