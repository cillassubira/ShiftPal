<div class="card-content js-shift-card-content">
    <span class="card-title activator grey-text text-darken-4"><%= render_date(@shift.day) %><br></span>
    <% if @shift.slot == "Free" %>
    	<p>Free day for you! Enjoy!</p>
    <% else %>
        <p class= "js-display-day-info card-text">You will be working on: <%= @shift.slot %> Shift</p>
    	<%= link_to "Change Shift", user_shift_path(current_user, @shift), :class => "waves-effect waves-light btn change-shift-btn" %>
    <% end %>
</div>

