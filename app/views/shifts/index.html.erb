<body>
<div class= "container">
	<div class="row">
  		<div class="col s8">
      	<%= month_calendar do |date| %>
  			<p class = "display-day"><%= date.mday %></p>
  			<%if  @shifts.find_by(day: date).class == Shift %>
  				<p>Hoy trabajas:</p>
          <p hidden class="js-shift-slot">%= @shifts.find_by(day: date).slot %></p>
  				<%=  @shifts.find_by(day: date).slot %>
    			<p hidden class="js-shift-date"><%= date %></p>
          <p hidden class="js-shift-id">
          <%= @shifts.find_by(day: date).id %></p>
  			<%end %>
		<% end %>
		</div>
   		<div class="col s4">
    		<%= render "/partials/shift_card" %>
    		<%= render "/partials/key_card" %>
    	</div>
	</div>
</div>
</body>

