<body>
<div class= "container">
	<div class="row">
  		<div class="col s8">
      	<%= month_calendar do |date| %>
  			<p class = "display-day"><%= date.mday %></p>
            <p hidden class = "display-day-complete" ><%= date %></p>
  		<% end %>
		</div>
   		<div class="col s4">
            <%= render "shift_card" %>
            <div id ='js-shift-card'></div>
            <div class="card">
                <div class="card-content">
                    <span class="card-title activator grey-text text-darken-4 card-key">Remember</span>
                    <ul class="collection">
                        <li class="collection-item card-key">
                        <i class="material-icons morning">av_timer</i><br>
                        <p>Morning Shift</p>
                        <p class=item-info>06:45 to 14:00 LT</p>
                        </li>
                        <li class="collection-item card-key"><i class="material-icons afternoon">av_timer</i>
                        <p>Afternoon Shift</p>
                        <p class=item-info>13:45 to 21:00 LT</p>
                        </li>
                        <li class="collection-item card-key"><i class="material-icons night">av_timer</i>
                        <p>Night Shift</p>
                        <p class=item-info>20:45 to 07:00 LT</p>
                        </li>
                    </ul>
                </div>
            </div>
    	</div>
	</div>
</div>

  <!-- Modal Structure -->
  <div id="modal-alert" class="modal">
    <div class="modal-content">
      <h4>Wow!</h4>
      <p class="modal-alert-message"></p>
    </div>
    <div class="modal-footer">
      <a href="#!" class=" modal-action modal-close waves-effect waves-green btn-flat">Close</a>
    </div>
  </div>

</body>

